<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <strong>Username:  <%= @user.username %></strong>
</div>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{@user.posts.size})", @user %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

<% if params[:tab].nil? %>
  <%= render partial: '/posts/post', collection: @user.posts %>
<% elsif params[:tab] == 'comments' %>
  <%= render partial: 'comments/comment', collection: @user.comments.sort_by { |x| x.total_votes }.reverse, locals: { show_post: true } %>
<% end %>


