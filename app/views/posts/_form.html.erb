<% if @post.errors.any? %>
  <div class="row">
    <div class="alert alert-error span8">
      <p>There are some errors:</p>
      <ul>
        <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class='well'>
  <%= form_for @post do |f| %>
    
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
  
  <% end %>
</div>