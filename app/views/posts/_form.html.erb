<%= render 'shared/errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>

    <%= f.submit(@post.new_record? ? "Add Post" : "Edit Post",class: "span3 btn btn-primary") %>
  
  <% end %>
</div>